@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-person-rolodex"></i> Manage Roles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>