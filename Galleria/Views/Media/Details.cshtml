@model Galleria.Models.MediaItem

@{
    ViewData["Title"] = Model.Title;
}

<section class="media-details-page">
    <!-- Cabeçalho + voltar -->
    <div class="d-flex justify-content-between align-items-center mb-3 mb-md-4">
        <div>
            <a asp-controller="Media" asp-action="Index" class="back-link d-inline-flex align-items-center mb-2">
                <i class="bi bi-arrow-left-short me-1"></i> Back to gallery
            </a>
            <h1 class="media-title mb-1">@Model.Title</h1>
            <p class="media-subtitle mb-0">
                Uploaded by <strong>@Model.ApplicationUser?.UserName</strong>
                on @Model.UploadDate.ToString("dd MMM yyyy")
                in <span class="badge media-category-pill">@Model.Category?.Name</span>
            </p>
        </div>
    </div>

    <div class="row g-4 media-details-layout">
        <!-- Coluna principal: imagem/vídeo -->
        <div class="col-12 col-lg-8">
            <article class="media-details-card">
                <div class="media-details-media-wrapper">
                    @if (Model.Type == MediaType.Photo)
                    {
                        <img src="@Model.FilePath"
                             class="media-details-media"
                             alt="@Model.Title" />
                    }
                    else if (Model.Type == MediaType.Video)
                    {
                        <video controls class="media-details-media">
                            <source src="@Model.FilePath" type="video/mp4" />
                            Your browser does not support the video tag.
                        </video>
                    }
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <div class="media-details-description mt-3">
                        <h4 class="media-section-title">Description</h4>
                        <p class="mb-0">@Model.Description</p>
                    </div>
                }
            </article>
        </div>

        <!-- Coluna lateral: info + tags -->
        <div class="col-12 col-lg-4">
            <aside class="media-meta-card">
                <h5 class="media-section-title mb-3">Details</h5>

                <dl class="row mb-3">
                    <dt class="col-4 text-muted small">Type</dt>
                    <dd class="col-8">
                        @if (Model.Type == MediaType.Photo)
                        {
                            <span><i class="bi bi-image me-1"></i>Photo</span>
                        }
                        else
                        {
                            <span><i class="bi bi-camera-video me-1"></i>Video</span>
                        }
                    </dd>

                    <dt class="col-4 text-muted small">Uploaded</dt>
                    <dd class="col-8">@Model.UploadDate.ToString("dd MMM yyyy HH:mm")</dd>

                    <dt class="col-4 text-muted small">By</dt>
                    <dd class="col-8">@Model.ApplicationUser?.UserName</dd>

                    <dt class="col-4 text-muted small">Category</dt>
                    <dd class="col-8">@Model.Category?.Name</dd>
                </dl>

                @if (Model.Keywords != null && Model.Keywords.Any())
                {
                    <div class="mb-3">
                        <h6 class="media-section-title mb-2">Tags</h6>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var tag in Model.Keywords)
                            {
                                <span class="tag-pill">
                                    <i class="bi bi-hash me-1"></i>@tag.Text
                                </span>
                            }
                        </div>
                    </div>
                }

                <div class="mt-3">
                    <a asp-controller="Media" asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill">
                        <i class="bi bi-grid-3x3-gap me-1"></i> Back to gallery
                    </a>
                </div>
            </aside>
        </div>
    </div>
</section>
