@model MediaItem

@{
    Layout = null; // This view won't use the main site layout
    ViewData["Title"] = Model.Title;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container text-center mt-5">
        <h1 class="display-4">@Model.Title</h1>
        <p class="text-muted">@Model.Description</p>
        <div class="my-4">
            @if (Model.Type == MediaType.Photo)
            {
                <img src="@Model.FilePath" class="img-fluid rounded shadow-lg" alt="@Model.Title" />
            }
            else if (Model.Type == MediaType.Video)
            {
                <video controls class="img-fluid rounded shadow-lg">
                    <source src="@Model.FilePath" type="video/mp4">
                </video>
            }
        </div>
    </div>
</body>
</html>