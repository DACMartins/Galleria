@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="display-1 text-danger">Oops!</h1>
    <h2 class="display-4">Something Went Wrong</h2>
    <p class="lead mt-4">
        We're sorry, but we've encountered an unexpected issue.
        <br />
        Please try again later or return to the home page.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-3">Go to Homepage</a>

    @* This part only shows technical details during development for easier debugging *@
    @if (Model.ShowRequestId)
    {
        <div class="alert alert-danger mt-5">
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
            <p>
                This information is valuable for our technical team to diagnose the problem.
            </p>
        </div>
    }
</div>