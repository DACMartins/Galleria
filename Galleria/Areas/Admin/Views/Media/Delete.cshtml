@model MediaItem

@{
    ViewData["Title"] = "Delete Confirmation";
}

<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to delete this item?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Delete</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle-fill"></i> Back to List</a>
    </form>
</div>