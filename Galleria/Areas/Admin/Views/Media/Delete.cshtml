@model MediaItem

@{
    ViewData["Title"] = "Delete Confirmation";
}

<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to permanently delete this item?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Uploader</dt>
        <dd class="col-sm-10">@Model.ApplicationUser.UserName</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>